[
  {
    "regex": "#\\\\begin\\{itemize\\}\\[\\<\\+\\-\\>\\]#",
    "replace": "\\begin{itemize}"
  },
  {
    "regex": "#\\\\begin\\{enumerate\\}\\[\\<\\+\\-\\>\\]#",
    "replace": "\\begin{enumerate}"
  },
  {
    "regex": "#\\\\includegraphics\\{([^\\}]+)\\}#",
    "replace": "\\includegraphics[natwidth=1200pt, natheight=349pt, width=1.0\\textwidth]{$1}"
  },
  {
    "regex": "#\\\\caption\\{([^\\}]+)\\}#",
    "replace": "\\caption{$1}\\label{$1}"
  },
  {
    "regex": "#``([^'']*)''#",
    "replace": "\\enquote{$1}"
  },
  {
    "regex": "#\\\\begin{longtable}\\[c\\]{@{}rlll@{}}#",
    "replace": "\\\\begin{longtable}[c]{p{.5cm}p{4cm}p{4cm}p{4cm}}"
  },
  {
    "regex": "#\\\\begin{longtable}\\[c\\]{@{}rllr@{}}#",
    "replace": "\\\\begin{longtable}[c]{m{.5cm}>{\\\\raggedright \\\\arraybackslash}p{2.0cm}m{8.5cm}m{1.8cm}}"
  },
  {
    "regex": "#\\\\\\\\\\\\addlinespace#",
    "replace": "\\\\\\\\\\\\addlinespace[.3cm]"
  }
]